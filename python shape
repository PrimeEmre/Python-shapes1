import turtle
turtle_screen = turtle.Screen()
turtle_screen.bgcolor("gold")
turtle_screen.title("turtle python")

turtle_x=turtle.Turtle()
turtle_x.color("blue")


def shrinkingSquare(size):

    for i in range(4):
        turtle_x.forward(size)
        turtle_x.left(90)
        size=size-5


shrinkingSquare(280)
shrinkingSquare(130)
shrinkingSquare(110)
shrinkingSquare(100)
shrinkingSquare(90)
shrinkingSquare(80)
shrinkingSquare(50)
shrinkingSquare(40)


turtle.done()
